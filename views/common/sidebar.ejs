<div class="drawer">
  <input id="sidebar-toggle" type="checkbox" class="drawer-toggle" />
  <div class="drawer-content">
    <%- include('toolbar', { userInfo, title, sidebarId: "sidebar-toggle" }) %>
  </div>
  <div class="drawer-side">
    <label for="sidebar-toggle" aria-label="close sidebar" class="drawer-overlay"></label>
    <div class="bg-base-300 flex flex-col h-full w-60">
      <header class="flex w-full">
        <label for="sidebar-toggle" class="justify-start w-full btn btn-ghost"><i
            class="fa-solid fa-xmark text-xl"></i></label>
      </header>
      <!-- TODO reroutes -->
      <footer class="flex flex-col items-center justify-center pb-2">
        <div class="w-1/2">
          <div class="label">
            <span class="label-text">Theme</span>
          </div>
          <select class="select select-secondary capitalize w-full" name="theme"
            onchange="document.documentElement.setAttribute('data-theme', this.value)">
            <% themes.forEach(theme => { %>
            <option class="capitalize" value=<%= theme %>><%= theme %></option>
            <% }) %>
          </select>
        </div>
        <span class="text-sm">Version:<b class="font-bold">
            <%= version %>
          </b></span>
      </footer>
    </div>

  </div>
</div>